model Pack {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  coverImage  String?
  items       Item[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Item {
  id          String   @id @default(cuid())
  name        String
  description String?
  rarity      Float
  pack        Pack     @relation(fields: [packId], references: [id])
  packId      String
  value       Float    @default(0)
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
